{{> header }}
<div class="container">
  <div class="row">
    <img src="/img/streamline_logo.png" alt="Streamline Logo" class="img-fluid logo">
  </div>
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <form>
              <div class="form-group row">
                <label for="inputEmail3" class="col-sm-4 col-form-label text-right">Username</label>
                <div class="col-sm-8">
                  <input type="email" class="form-control" id="inputEmail3">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputPassword3" class="col-sm-4 col-form-label text-right">Password</label>
                <div class="col-sm-8">
                  <input type="password" class="form-control" id="inputPassword3">
                </div>
              </div>
              <div class="form-group row">
                  <button type="submit" class="btn btn-lg btn-primary text-uppercase ml-auto btn-submit">Entrar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</div>
{{> footer }}
