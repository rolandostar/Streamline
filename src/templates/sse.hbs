<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
</head>
<body>
  <script>
    var source = new EventSource('/recording/liveUpdate');
    source.onmessage = function(e) {
      document.body.innerHTML += e.data + '<br>';
    };
    source.addEventListener(19, function(e) {
      let data = JSON.parse(e.data)
      if (data.event === 'error' || data.event === 'done') source.close()
      console.log(e);
      }, false);
    source.addEventListener(20, function(e) {
      console.log('20 :)');
      let data = JSON.parse(e.data)
      if (data.event === 'error' || data.event === 'done') source.close()
      console.log(e);
}, false);

source.addEventListener('open', function(e) {
  // Connection was opened.
  console.log('OPENED')
  console.log(e)
}, false);

source.addEventListener('error', function(e) {
  if (e.eventPhase == EventSource.CLOSED) {
    // Connection was closed.
    console.log('CLOSED')
    source.close()
  }
}, false);
  </script>
</body>
</html>
